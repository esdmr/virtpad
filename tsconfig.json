{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "charset": "utf8",
    "forceConsistentCasingInFileNames": true,
    "module": "commonJS",
    "moduleResolution": "node",
    "newLine": "lf",
    "outDir": "build",
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "include": [
    "src"
  ]
}
